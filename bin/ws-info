#!/usr/bin/env bash
# Print useful workspace info at a glance

echo "=== Workspace Info ==="
echo "Hostname:    $(hostname)"
echo "User:        $(whoami)"
echo "Shell:       $SHELL"
echo "OS:          $(lsb_release -ds 2>/dev/null || cat /etc/os-release 2>/dev/null | grep PRETTY | cut -d= -f2 | tr -d '"')"
echo "Kernel:      $(uname -r)"
echo "Uptime:      $(uptime -p 2>/dev/null || uptime)"
echo ""
echo "=== Disk ==="
df -h / | tail -1 | awk '{printf "Root: %s used of %s (%s)\n", $3, $2, $5}'
df -h /home 2>/dev/null | tail -1 | awk '{printf "Home: %s used of %s (%s)\n", $3, $2, $5}'
echo ""
echo "=== Memory ==="
free -h | awk '/Mem:/{printf "RAM: %s used of %s\n", $3, $2}'
echo ""
echo "=== Key Paths ==="
echo "DATADOG_ROOT: ${DATADOG_ROOT:-not set}"
echo "GOPATH:       ${GOPATH:-not set}"
echo "Dotfiles:     $HOME/dotfiles"
